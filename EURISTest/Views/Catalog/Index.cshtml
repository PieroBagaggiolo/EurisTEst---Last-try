@model IEnumerable<EURISTest.Models.CatalogModel>

@{
    ViewBag.Title = "Index";
}

<h2>Cataloghi</h2>

<p>
    @Html.ActionLink("Nuovo catalogo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Dettagli", "Details", new { id = item.Id }) |
            @Html.ActionLink("Elimina", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Aggiungi prodotto", "AddProduct", new { id = item.Id }) |
        </td>
    </tr>
}

</table>
